    <title>Registro</title>


    <script>
        function comprobarContraseña() {
            var contraseña = document.f1.contraseña.value;
            var re_contraseña = document.f1.re_contraseña.value;

            if (contraseña != re_contraseña) {
                alert("Las contraseñas no coinciden");
                document.f1
                return false;
            }
            else {
                return true;
            }
        }
    </script>


</head>
<body>
    <div class="main">
        <section class="signup">
            <div class="container">
                <div class="signup-content">
                    <form method="POST" id="signup-form" class="signup-form" name="f1" enctype="multipart/form-data" onsubmit="return comprobarContraseña()" action="@Url.Action("Registrado", "Usuarios")">
                        <h2 class="form-title">Registrar usuario</h2>

                        <div>
                            <button class="file-upload-btn" type="button" onclick="$('.file-upload-input').trigger( 'click' )">Subir foto</button>

                            <div class="image-upload-wrap">
                                <input class="file-upload-input" id="Foto" name="Foto" type='file' onchange="readURL(this);" accept="image/*" required />
                                <div class="drag-text">
                                    <h3>Arrastra o selecciona una imagen</h3>
                                </div>
                            </div>
                            <div class="file-upload-content">
                                <img class="file-upload-image" src="#" alt="your image" />
                                <div class="image-title-wrap">
                                    <button type="button" onclick="removeUpload()" class="remove-image"> Borrar </button>
                                </div>
                            </div>
                        </div> <br />

                        <div class="wrap-input100 validate-input" data-validate="Ingrese Nombre">
                            <input class="input100" type="text" id="nombre" name="nombre" placeholder="Nombre" required pattern="[A-Za-z].{1,}" title="Ingrese un nombre válido">
                            <span class="focus-input100"></span>
                        </div><br />

                        <div class="wrap-input100 validate-input" data-validate="Ingrese Apellido">
                            <input class="input100" type="text" id="apellido" name="apellido" placeholder="Apellido" required pattern="[A-Za-z].{1,}" title="Ingrese un apellido válido">
                            <span class="focus-input100"></span>
                        </div><br />

                        <div class="wrap-input100 validate-input" data-validate="Ingrese Nombre de Usuario">
                            <input class="input100" type="text" id="username" name="username" placeholder="Nombre de usuario" required title="Ingrese un nombre de usuario">
                            <span class="focus-input100"></span>
                        </div><br />

                        <div class="wrap-input100 validate-input" data-validate="Correo electrónico">
                            <input class="input100" type="email" id="email" name="email" placeholder="Email" required title="Ingrese un email">
                            <span class="focus-input100"></span>
                        </div><br />

                        <div class="wrap-input100 validate-input" data-validate="Ingrese contraseña">
                            <input class="input100" type="password" id="contraseña" name="contraseña" placeholder="Contraseña" required pattern=".{6,16}" title="La contraseña debe tener entre 6 y 16 caracteres">
                            <span class="focus-input100"></span>
                        </div><br />

                        <div class="wrap-input100 validate-input" data-validate="Repita contraseña">
                            <input class="input100" type="password" id="re_contraseña" name="re_contraseña" placeholder="Repita su contraseña" required title="Repita su contraseña">
                            <span class="focus-input100"></span>
                        </div> <br />

                        <div class="container-login100-form-btn m-t-17">
                            <button class="login100-form-btn">
                                Registrarse
                            </button>
                        </div>

                    </form>
                    <p class="loginhere">
                        ¿Ya tenés una cuenta? @Html.ActionLink("Iniciar sesión", "Login", "Usuarios")
                    </p>
                </div>
            </div>
        </section>
    </div>

