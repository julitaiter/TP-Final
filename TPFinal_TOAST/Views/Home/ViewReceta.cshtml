@using TPFinal_TOAST.Models
@model Receta

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Nunito+Sans:300,400,600,700,800,900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/open-iconic-bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/animate.css">
    <link rel="stylesheet" href="~/Content/owl.carousel.min.css">
    <link rel="stylesheet" href="~/Content/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/Content/magnific-popup.css">
    <link rel="stylesheet" href="~/Content/aos.css">
    <link rel="stylesheet" href="~/Content/ionicons.css">
    <link rel="stylesheet" href="~/Content/flaticon.css">
    <link rel="stylesheet" href="~/Content/icomoon.css">
    <link rel="stylesheet" href="~/Content/style.css">
    <link rel="stylesheet" href="~/Content/Recetas.css">
</head>
<body>
    <div id="Componente_15___2" class="Componente_15___2">
        <div id="Nombre_Receta">
            <h1 class="h1ViewReceta"> @Model.NombreReceta </h1>
        </div>


        <div id="minutos">
            <h4>Subida por: @ViewBag.Usuario.Nombre_Usuario</h4>
            <h2> Tiempo de preparacion: @Model.TiempoPreparacion minutos </h2>
            <!--<div id="f_cil">
                <h2>Model.Dificultad</h2>
            </div>-->
            <h2>raciones: @Model.CantidadPlatos</h2>
        </div>

        <div class="divViewReceta">
            <img class="imgViewReceta" src="~/Content/Fotos/Recetas/@Model.NombreFoto" />
        </div>
        <!--<img src="~/Content/Fotos/Otros/Heart_Icon.png" />-->
    </div>
    <div id="Ingredientes_">
        <br />
        @foreach (Ingrediente ing in Model.Ingredientes)
        {
            <ul>
                <li>@ing.NombreIngrediente</li>
            </ul>
        }
    </div> <br />

    <div id="Instrucciones_">
        <h2>@Model.Preparacion</h2>
    </div>
    <div id="Header">
        <div id="Categor_as">
            <h4>@Model.Categoria</h4>
        </div>

    </div>
    @{ Usuario user = (Usuario)Session["Usuario"];}
    @if (Model.Autor == user.IDUsuario)
    {
        <div>
            <button type="button" class="correte" data-confirm="¿Querés eliminar esta receta?">
                @Html.ActionLink("Eliminar receta", "EliminarReceta", "Home", new { id = Model.IDReceta })
            </button>
        </div>
    }
</body>